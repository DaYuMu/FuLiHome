<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF5511">
    <ImageView
        android:id="@+id/title_image"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/tb_icon_more_msg_white_56"/>
    <TextView
        android:layout_toLeftOf="@id/title_image"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:text="设置"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="#FF5511"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/UserAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/contactlogo"/>
        <TextView
            android:id="@+id/UserName"
            android:gravity="center_horizontal"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="用户名"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/UserEWM"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tb_icon_home_qrcode_normal"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#E63F00">
        <LinearLayout
            android:id="@+id/CollectBao"
            android:layout_gravity="center_vertical"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="3"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="收藏的宝贝"/>

        </LinearLayout>
        <View
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#EE7700"/>

        <LinearLayout
            android:id="@+id/CollectShop"
            android:layout_gravity="center_vertical"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="2"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text="收藏的店铺"/>

        </LinearLayout>
        <View
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#EE7700"/>
        <LinearLayout
            android:id="@+id/MyBefore"
            android:layout_gravity="center_vertical"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="27"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="我的足迹"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#DDDDDD"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/MyBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:text="我的订单"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/Right_arrow_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow_icon"/>
        <TextView
            android:layout_toLeftOf="@id/Right_arrow_icon"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:text="查看已购全部宝贝"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#DDDDDD"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_list1"/>
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_list2"/>
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_list3"/>
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_list4"/>
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_list5" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#DDDDDD"/>
    <!--  卡券类的布局文件  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="我的卡券包"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/RightMyBao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow_icon"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#DDDDDD"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/Image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/center_card_coupon1"/>

        <TextView
            android:layout_toRightOf="@id/Image1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="生活券"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/RightLife"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow_icon"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#DDDDDD"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/center_card_coupon2"/>
        <TextView
            android:layout_toRightOf="@id/image2"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="网店券"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/RightIntent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow_icon"/>
        <TextView
            android:layout_toLeftOf="@id/RightIntent"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无可以优惠券"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#DDDDDD"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image3"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/center_card_coupon3"/>
        <TextView
            android:layout_toRightOf="@id/image3"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="会员卡"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/RightVIP"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow_icon"/>
        <TextView
            android:layout_toLeftOf="@id/RightVIP"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一卡在手，逛店无忧"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#DDDDDD"/>
</LinearLayout>