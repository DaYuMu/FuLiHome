<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<RelativeLayout
    android:id="@+id/Title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#cc0000">
    <ImageView
        android:id="@+id/ivTitleBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"/>
    <ImageView
        android:padding="5dp"
        android:id="@+id/ivTitleCollect"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@mipmap/bg_collect_in"/>
    <ImageView
        android:padding="5dp"
        android:id="@+id/ivTitleShare"
        android:layout_toLeftOf="@id/ivTitleCollect"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@mipmap/bg_share_nor"/>
    <ImageView
        android:id="@+id/ivTitleCart"
        android:padding="5dp"
        android:layout_toLeftOf="@id/ivTitleShare"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@mipmap/bg_cart_selected"/>


</RelativeLayout>
    <RelativeLayout
        android:id="@+id/English"
        android:layout_below="@id/Title"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/EnglishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="商品的英文名字"/>
        <TextView
            android:id="@+id/agoPrice"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价"
            android:textSize="25dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/China"
        android:layout_below="@id/English"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ChinaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="商品的中文名字"/>
        <TextView
            android:id="@+id/currentPrice"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现售价"
            android:textSize="25dp"/>
    </RelativeLayout>

    <cn.ucai.fulihome.view.SlideAutoLoopView
        android:layout_below="@id/China"
        android:id="@+id/SlideImage"
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:background="@color/good_detaul_flow_indicator_focus">

    </cn.ucai.fulihome.view.SlideAutoLoopView>
    <cn.ucai.fulihome.view.FlowIndicator
        android:layout_below="@id/SlideImage"
        android:id="@+id/FlowImage"
        android:layout_width="300dp"
        android:layout_height="15dp"
        android:layout_centerInParent="true"
        app:count="4"
        app:focus="3"
        app:focus_color="@color/good_detaul_flow_indicator_focus"
        app:normal_color="#a1d1d1d1"
        app:r="5dp"
        app:space="3dp"/>

    <WebView
        android:layout_below="@id/FlowImage"
        android:id="@+id/NewGoodsDetails"
        android:layout_marginTop="5dp"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:text="商品简介"/>

</RelativeLayout>
