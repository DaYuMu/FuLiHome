<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/BoutiqueRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivBoutique"
    android:layout_width="200dp"
    android:layout_height="230dp"
    android:src="@drawable/xxxxxxx"/>
    <LinearLayout
        android:layout_toRightOf="@id/ivBoutique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/BoutiqueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="商品标题"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/BoutiqueGoodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="商品名称"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/BoutiqueDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="商品简介"/>
    </LinearLayout>
</RelativeLayout>